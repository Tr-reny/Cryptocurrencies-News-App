        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_action_rate"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:text="Rate this app 5 stars" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:drawableLeft="@drawable/ic_menu_share"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="Share this app" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_action_about"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text=" Help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="Update this app" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_action_feedback"
                    android:drawablePadding="6dp"
                    android:text="Give me a feedback" />


            </LinearLayout>
        </LinearLayout>

